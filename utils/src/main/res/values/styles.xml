<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Placeholders -->
    <style name="AppTheme" />

    <!--
    <attr name="colorControlNormal" format="reference|color" />
    <attr name="colorBackgroundFloating" format="reference|color" />
    -->

    <!-- Fullscreen stuff -->
    <style name="FullscreenTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <color name="black_overlay">#66000000</color>

    <style name="FullscreenActionBarStyle">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- Drawer layout (see other variants) -->
    <style name="Drawer">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- BreadcrumbsView styleable -->
    <declare-styleable name="BreadcrumbsView">
        <attr name="arrowRes" format="reference" />
    </declare-styleable>

    <!-- MessageView styleable -->
    <declare-styleable name="MessageView">
        <attr name="errorRes" format="reference" />
        <attr name="infoRes" format="reference" />
    </declare-styleable>
</resources>